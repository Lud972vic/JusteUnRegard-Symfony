{% extends 'base.html.twig' %}

{% block title %}My profile
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-5">
				<div class="card" style="width: 36rem;">
					<div class="card-body">
						<h3>My profile :
							{{ user.pseudo }}</h3>
						{{ form_start(form) }}
						{{ form_label(form.civilite) }}
						{{ form_widget(form.civilite) }}

						{{ form_label(form.nom) }}
						{{ form_widget(form.nom) }}

						{{ form_label(form.prenom) }}
						{{ form_widget(form.prenom) }}

						{{ form_label(form.pseudo) }}
						{{ form_widget(form.pseudo) }}

						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}

						{{ form_label(form.profil) }}
						{{ form_widget(form.profil) }}

						{{ form_label(form.description) }}
						{{ form_widget(form.description) }}
					</div>
				</div>
			</div>

			<div class="col-2"></div>

			<div class="col-5">
				<div class="card" style="width: 36rem;">
					<div class="card-body">
						<h3>...</h3>
						{{ form_label(form.ville) }}
						{{ form_widget(form.ville) }}

						{{ form_label(form.date_naissance) }}
						{{ form_widget(form.date_naissance) }}

						{{ form_label(form.telephone) }}
						{{ form_widget(form.telephone) }}

						{{ form_label(form.url_compte_facebook) }}
						{{ form_widget(form.url_compte_facebook) }}

						{{ form_label(form.url_compte_instagram) }}
						{{ form_widget(form.url_compte_instagram) }}

						{{ form_label(form.url_compte_autre) }}
						{{ form_widget(form.url_compte_autre) }}

						<a href="{{ path('home_home') }}" class="btn btn-outline-success btn-sm btn-block mt-2">
							<i class="fas fa-home"></i>
							back to home</a>

					 {{ include('user/_form.html.twig') }} 

						{# {{ include('user/_delete_form.html.twig') }} #}
						<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_method" value="DELETE">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
							<button class="btn btn-outline-danger btn-sm btn-block mt-2">Delete</button>
						</form>

						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
