{% extends 'base.html.twig' %}

{% block title %}
	{{ form_title }}
{% endblock %}

{% block body %}
	<div class="container mt-5">

		<h1>{{ form_title }}</h1>
		<div class="row">
			<div class="col-8">
				<div class="card">
					<img class="card-img-top" src="{{ asset ("uploads/images/featured/") }}{{ article.image }}" alt="{{ article.titre }}">

					<div class="card-body">
						{{ form_start(form) }}
						{{ form_label(form.titre) }}
						<h5 class="card-title">{{ form_widget(form.titre) }}</h5>
						{{ form_label(form.contenu) }}
						<p class="card-text">
						{{ form_widget(form.contenu) }}</p>

						{{ form_label(form.imageFile) }}
						{{ form_widget(form.imageFile) }}
						{{ form_end(form) }}

						<a href="{{ path('news_article_index') }}" class="btn btn-outline-success btn-sm btn-block mt-2">
							<i class="fas fa-home"></i>
							back to list</a>
						<form method="post" action="{{ path('news_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_method" value="DELETE">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
							<button class="btn btn-outline-danger btn-sm btn-block mt-2">
								<i class="far fa-trash-alt"></i>
								Delete</button>
						</form>
					</div>
				</div>
			</div>
			<div class="col-4">
				<p>Les commentaires des membres...</p>
			</div>
		</div>
	{% endblock %}
